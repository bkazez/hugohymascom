---
title: Home
css_class: home
---
<section class="bio">
  <div class="container">
    <div class="row">
      <div class="col mt-3">
        <%= markdown(File.read("data/bio-short.md")) %>
        <a href="/about" class="read-more">Read More</a> ›
      </div>
    </div>
  </div>
</section>

<section class="videos">
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>Videos</h2>
        <div class="scroll-row">
          <% data.media.first(3).each do |video| %>
		      <div class="video-card">
		        <lite-youtube
		          videoid="<%= video[:media] %>"
		          playlabel="<%= video[:title] %>"
		          posterquality="maxresdefault"
		          params="rel=0"></lite-youtube>
		        <div class="video-title"><%= video[:title] %></div>

		        <% if video[:credit].present? %>
		          <div class="credit"><%= video[:credit] %></div>
		        <% end %>
		      </div>
          <% end %>
        </div>
        <a href="/watch-listen" class="read-more">All Videos</a> ›
      </div>
    </div>
  </div>
</section>

<section class="calendar">
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>Upcoming</h2>
        <ul class="list-unstyled">
          <% future_events(data.events).first(3).each do |event| %>
            <li class="mb-2">
              <strong><%= event.date.strftime("%-d %B %Y") %></strong><br>
              <%= event.title %> — <%= event.location %>
            </li>
          <% end %>
        </ul>
        <a href="/schedule" class="read-more">Full Schedule</a> ›
      </div>
    </div>
  </div>
</section>
